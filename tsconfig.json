{
  "compilerOptions": {
      "module": "CommonJS",
      // "moduleResolution": "NodeNext", (not using ecmascript)
      "target": "ES2020",
      "esModuleInterop": true,
      "skipLibCheck": true, 
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", ".vscode"]
}